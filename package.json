    "@types/gradient-string": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
